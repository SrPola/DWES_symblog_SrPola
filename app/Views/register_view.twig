{% extends "layout.twig" %}

{% block nav %}
    <nav>
        <ul class="navigation">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/admin">Admin</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <h1>Registra un nuevo usuario</h1>

    {% if cookie is not null %}
        <div class="blogger-notice">Usuario creado con éxito.</div>
    {% endif %}

    <form class="blogger" action="/register" method="post">
        <div>
            <label for="user">Usuario:</label>
            <input type="text" id="user" name="user" required>
        </div>
        <div>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="email">Correo:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="profile">Perfil:</label>
            <input type="text" id="profile" name="profile" required>
        </div>
        <div>
            <input name="createUser" type="submit" value="Registrarse">
        </div>
    </form>
{% endblock %}

{% block sidebar %}
    {% include "sidebar.twig" %}
{% endblock %}

